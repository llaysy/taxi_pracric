<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADADAD">

        <!-- Top Bar with Hamburger Icon -->
        <ImageView
            android:id="@+id/hamburger_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hamburger"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/marcel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="8dp"
            android:text="MARCEL"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hamburger_icon" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_logo"
            android:background="#FFFFFF"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:strokeColor="#D9D9D9"
            app:strokeWidth="10dp"
            android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/marcel_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <!-- Switch Button -->

        <!-- Bottom Yellow Section -->
        <Button
            android:id="@+id/btnWhereTo"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:backgroundTint="#727272"
            android:text="Куда хотите поехать?"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/car_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <View
            android:id="@+id/yellow_background"
            android:layout_width="0dp"
            android:layout_height="550dp"
            android:background="@drawable/rounded_background"
        app:layout_constraintTop_toBottomOf="@id/btnWhereTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        android:clipToOutline="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_avatar"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/profile_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/profile_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:text="Рейтинг: 5.00"
            android:layout_marginTop="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Профиль"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/settings_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Настройки"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Информация"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/location_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Местоположение"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/profile_location_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/payment_method_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Способ оплаты"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/profile_payment_method_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/logout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Выйти из аккаунта"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>